    public static boolean isContainer(short options, short recordId){
        if(recordId >= EscherContainerRecord.DGG_CONTAINER &&
           recordId <= EscherContainerRecord.SOLVER_CONTAINER){
            return true;
        }
        if (recordId == EscherTextboxRecord.RECORD_ID) {
